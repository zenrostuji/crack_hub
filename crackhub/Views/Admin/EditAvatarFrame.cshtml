@model crackhub.Models.Data.AvatarFrame

@{
    ViewData["Title"] = "Chỉnh sửa khung Avatar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit"></i>
                        Chỉnh sửa khung Avatar: @Model.FrameName
                    </h3>
                    <div class="card-tools">
                        <a asp-action="AvatarFrames" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>

                <form asp-action="EditAvatarFrame" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        @Html.AntiForgeryToken()
                        <input asp-for="Id" type="hidden" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FrameName" class="control-label">Tên khung *</label>
                                    <input asp-for="FrameName" class="form-control" required />
                                    <span asp-validation-for="FrameName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Description" class="control-label">Mô tả</label>
                                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>                                <div class="form-group">
                                    <label asp-for="RarityLevel" class="control-label">Độ hiếm *</label>
                                    <select asp-for="RarityLevel" class="form-control" required>
                                        <option value="1">Thường (Common)</option>
                                        <option value="2">Khó tìm (Uncommon)</option>
                                        <option value="3">Hiếm (Rare)</option>
                                        <option value="4">Sử thi (Epic)</option>
                                        <option value="5">Huyền thoại (Legendary)</option>
                                    </select>
                                    <span asp-validation-for="RarityLevel" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">                                <div class="form-group">
                                    <label class="control-label">Ảnh khung hiện tại:</label>
                                    <div class="avatar-frame-preview mb-3" style="width: 120px; height: 120px;">
                                        <div style="width: 100px; height: 100px; background: linear-gradient(135deg, #e9ecef, #dee2e6); border-radius: 50%; margin: 10px; display: flex; align-items: center; justify-content: center;">
                                            <i class="fas fa-user text-muted" style="font-size: 2rem;"></i>
                                        </div>
                                        <img src="@Model.FrameUrl" style="position: absolute; top: 0; left: 0; width: 120px; height: 120px;" alt="@Model.FrameName - Current Avatar Frame" title="@Model.FrameName" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="frameImage" class="control-label">Thay đổi ảnh khung</label>
                                    <input type="file" name="frameImage" id="frameImage" class="form-control-file" accept="image/*" />
                                    <small class="form-text text-muted">Để trống nếu không muốn thay đổi ảnh. Chấp nhận: JPG, PNG, GIF. Khuyến nghị: 256x256px</small>
                                </div>                                <div class="form-group">
                                    <div id="imagePreview" style="display: none;">
                                        <label class="control-label">Xem trước ảnh mới:</label>
                                        <div class="avatar-frame-preview" style="width: 120px; height: 120px; margin: 10px 0;">
                                            <div style="width: 100px; height: 100px; background: linear-gradient(135deg, #e9ecef, #dee2e6); border-radius: 50%; margin: 10px; display: flex; align-items: center; justify-content: center;">
                                                <i class="fas fa-user text-muted" style="font-size: 2rem;"></i>
                                            </div>
                                            <img id="previewImage" style="position: absolute; top: 0; left: 0; width: 120px; height: 120px;" alt="Preview" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="IsPremium" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsPremium" class="form-check-label">
                                            Yêu cầu Premium
                                        </label>
                                    </div>
                                    <small class="form-text text-muted">Chọn nếu chỉ người dùng Premium mới có thể sử dụng</small>
                                </div>

                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="IsDefault" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsDefault" class="form-check-label">
                                            Khung mặc định
                                        </label>
                                    </div>
                                    <small class="form-text text-muted">Khung mặc định sẽ được cấp cho tất cả người dùng mới</small>
                                </div>

                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsActive" class="form-check-label">
                                            Kích hoạt
                                        </label>
                                    </div>
                                    <small class="form-text text-muted">Khung sẽ có thể sử dụng khi được kích hoạt</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="control-label">Thông tin khác:</label>
                                    <ul class="list-unstyled">
                                        <li><strong>ID:</strong> @Model.Id</li>
                                        <li><strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</li>
                                        <li><strong>URL ảnh:</strong> @Model.FrameUrl</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Lưu thay đổi
                        </button>
                        <a asp-action="AvatarFrames" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Hủy
                        </a>
                        <a asp-action="AvatarFrameStats" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-chart-bar"></i> Xem thống kê
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function() {
            // Image preview functionality
            $('#frameImage').change(function() {
                var file = this.files[0];
                if (file) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#previewImage').attr('src', e.target.result);
                        $('#imagePreview').show();
                    }
                    reader.readAsDataURL(file);
                } else {
                    $('#imagePreview').hide();
                }
            });

            // Form validation
            $('form').submit(function(e) {
                var frameName = $('#FrameName').val().trim();

                if (!frameName) {
                    alert('Vui lòng nhập tên khung avatar.');
                    e.preventDefault();
                }
            });
        });
    </script>
}
